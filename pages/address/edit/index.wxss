/* pages/address/edit/index.wxss */

.edit_address {
  background-color: white;
  margin-top: 20px;
}

.address_item {
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: nowrap;
  flex-wrap: nowrap;
  padding: 15px 0px;
}

.address_label {
  min-width: 100px;
  margin-left: 10px;
  height: 35px;
  line-height: 35px;
}

.address_input {
  border-bottom: 1px solid #cccccc;
  width: 100%;
  margin-right: 10px;
}

.address_input input{
  height: 35px;
  line-height: 35px;
}

.submit_button{
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  background-color: white;
  position: fixed;
  bottom: 0px;
  border-top: 1px solid #cccccc;
}