/* pages/my/index.wxss */
.infomation-box{
  margin: 20px 10px;
}
.header-title{
  display: flex;
  flex-direction: row;
}
.logoimg{
  margin-right: 10px;
  width: 60px;
  height: 60px;
}
.logoimg image{
  border-radius: 50%;
}
.infomation{
   line-height: 30px;
}
.order_box{
  padding:5px 10px;
  background-color: #ffffff;
  border-radius: 10px;
  margin-top: 10px;
}

.order_box .view_all{
  color: #cccccc;
  font-size: 12px;
}

.my_order{
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content:space-between;
  justify-content: space-between;
}


.order_menu{
  margin-top: 10px;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
  flex-wrap: wrap;
  width: 100%;
  height: 80px;
  position: relative;
}

.order_menu .order_menu_item{
   background-image: url('https://wap.megaovip.com//static/image/daifukuan.png');
   background-position: center;
   background-size: 50%;
   background-repeat: no-repeat;
   margin-bottom: 10px;
   width: 25%;
   display: -webkit-flex;
   display: flex;
   -webkit-flex-wrap: wrap;
   flex-wrap: wrap;
   -webkit-align-content: center;
   align-content: center;
   -webkit-justify-content: center;
    justify-content: center;
}

.order_menu .menu_icon{
  width: 35px;
  height: 35px
}

.order_menu .menu_text{
  font-size: 12px;
  position:absolute;
  bottom: 0px;
}

.order_box .mp_cell_icon{
  margin-right: 16px;vertical-align: middle;width:20px; height: 20px;
}